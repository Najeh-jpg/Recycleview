<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/img_proteine"
        android:layout_width="226dp"
        android:layout_height="228dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059"
        app:srcCompat="@drawable/protein" />

    <TextView
        android:id="@+id/title_proteine"
        android:layout_width="384dp"
        android:layout_height="66dp"
        android:gravity="center"
        android:text="Soignez vos cheveux avec un soin de cheveux protéinné dès 99dt!"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc_proteine"
        android:layout_width="377dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:text="Chez Lilia ben Aziza"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.665" />

    <TextView
        android:id="@+id/texte_proteine"

        android:layout_width="372dp"
        android:layout_height="119dp"
        android:gravity="center"
        android:text="A force de brushing, couleur, mèches vos cheveux s’abîment et deviennent ternes, cassants et pas beaux !
        app:layout_constraintBottom_toBottomOf="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_proteine"
        app:layout_constraintVertical_bias="0.51" />"





</androidx.constraintlayout.widget.ConstraintLayout>
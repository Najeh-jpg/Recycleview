<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/verifyMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:text="Email not Verified"
        android:textColor="#E91E63"
        android:textSize="18dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/resendcode"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="250dp"

        android:text="VERIFY e-mail"
        android:visibility="visible" />




    <TextView
        android:id="@+id/yourprofile"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Your Profile"
        android:textSize="16dp"

        />

    <ImageView
        android:id="@+id/profilImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="130dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/profilname"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"


        android:text="Your Name"
        android:textSize="16dp"

        />

    <TextView
        android:id="@+id/profilemail"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="130dp"

        android:text="Your Email Adress"
        android:textSize="16dp"

        />

    <TextView
        android:id="@+id/profilphone"

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"


        android:text="Your phone"
        android:textSize="16dp" />
    <Button
        android:id="@+id/changeProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:text="Change Profile"

        />
    <Button
        android:id="@+id/resetPasswordLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:text="Reset Password"

        />




    <Button
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="goOffers"

        android:text="Go to beauty offers"
        />


</LinearLayout>